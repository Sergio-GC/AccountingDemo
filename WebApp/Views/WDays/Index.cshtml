@model IEnumerable<DTO.WDay>

@{
    ViewData["Title"] = "Index";
}


@{

    var events = Model.Select(item => new
    {
        title = item.Kid.Name,
        start = item.Date.ToDateTime(TimeOnly.MinValue).Add(item.Arrival.HasValue ? item.Arrival.Value.ToTimeSpan() : TimeSpan.Zero).ToString("yyyy-MM-dd HH:mm:ss"),
    }).ToList();
}

<script>
    addEventListener('DOMContentLoaded', function() {
        var calendarElement = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarElement, {
            initialView: 'dayGridMonth',
            events: @Html.Raw(Json.Serialize(events))  // Serialize and inject the events as JSON
        });
        calendar.render();
    });
</script>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-striped">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Date)
            </td>
            <td>
                @Html.DisplayFor(model => item.Arrival)
            </td>
            <td>
                @Html.DisplayFor(model => item.Departure)
            </td>
            <td>
                @Html.DisplayFor(model => item.Kid.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Price.Value)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>

    <div id="calendar"></div>
</table>
