@model DTO.InvoiceFormData
@using DTO

@{
    ViewData["Title"] = "InvoiceSummary";
}

<h1>InvoiceSummary</h1>

<h4>InvoiceFormData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InvoiceSummary">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row d-flex mb-2">
                <div class="form-group col-5 me-1">
                    <select asp-for="KidSelectinoId" class="form-control">
                        <option value="-1">--- All kids ---</option>
                        @{
                            foreach (Kid kid in ViewBag.kids)
                            {
                                <option value="@kid.Id">@(kid.Name)</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-check form-switch mt-2 col-4 ms-2 mb-2">
                    <label asp-for="WithSiblings" class="control-label"></label>
                    <input class="form-check-input" type="checkbox" asp-for="WithSiblings">
                    <span asp-validation-for="WithSiblings" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row d-flex mb-3">
                <div class="form-group col-5 me-2">
                    <label asp-for="PeriodFrom" class="control-label"></label>
                    <input asp-for="PeriodFrom" class="form-control" type="date" />
                    <span asp-validation-for="PeriodFrom" class="text-danger"></span>
                </div>

                <div class="form-group col-5">
                    <label asp-for="PeriodTo" class="control-label"></label>
                    <input asp-for="PeriodTo" class="form-control" type="date" />
                    <span asp-validation-for="PeriodTo" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
